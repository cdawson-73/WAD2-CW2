{{>page-partials/header}}
<div class="page-title">
    <h1>Forgotten Password</h1>
</div>
<div class="page-subtitle">
    <h3>Send An Email To Reset Your Password</h3>
</div>
<div class="card">
    <div class="card-body">
        {{#error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/error}}
        <form method="post" role="/reset-password">        
            <div class="form-group">
                <label for="password">
                    Enter Your Email To Send A Password Reset Link
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Enter Email">
                </div>
            </div>
            <input type="submit" value="Reset Password" class="btn btn-primary" readonly autocomplete="off">
        </form>
    </div>
  </div>
{{>page-partials/footer}}