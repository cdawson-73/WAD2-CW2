{{>page-partials/header}}
<div class="page-title">
    <h1>{{firstName}}'s Achievements</h1>
</div>
<div class="page-subtitle">
    <h3>A List Of Your Achievements</h3>
</div>
<div class="card">
    <div class="card-body">
        <div class="achievement-images">
            {{#achievements}}
                <a href="/{{username}}/achievement/{{name}}">
                    <div class="{{achieved}}">
                        <img src="{{image}}">
                        <div class="overlay">
                            <div class="image-overlay-text">
                                {{name}}
                            </div>
                        </div>
                    </div>
                </a>
            {{/achievements}}
            </div>
            <div class="btn btn-primary">
                <a href="/{{username}}/dashboard" class="button-link">Back To Dashboard</a>
            </div>
    </div>
  </div>
{{>page-partials/footer}}