{{>page-partials/header}}
<h1>Goals</h1>
<h2>Users Only</h2>
<h3>Welcome {{username}}</h3>
<h3><a href="/{{username}}/add-goal">Add New Goal</a></h3>
<div class="goals d-flex justify-content-around" >
    <div class="goals-set">
        <h4>Goals Set</h4>
        {{#sGoals}}
            <div class="goal-layout">
                <a href="/{{username}}/goal/{{id}}">
                    <div class="">
                        <h4>{{name}}</h4>
                    </div>
                    <div class="">
                        <div class="">
                            <img src="/img/goals/{{type}}.png"  class="goal-images">
                        </div>
                    </div>
                    <div class="">
                        Date Created: {{dateCreated}}
                    </div>
                </a>
            </div>
            <br>
        {{/sGoals}}
        {{^sGoals}}
            <div class="">
                You have not set any goals.
            </div>
        {{/sGoals}}
    </div>
    <div class="goals-complete">
        <h4>Goals Complete</h4>
        {{#cGoals}}
            <div class="goal-layout">
                <a href="/{{username}}/goal/{{id}}">
                    <div class="">
                        <h4>{{name}}</h4>
                    </div>
                    <div class="">
                        <div class="">
                            <img src="/img/goals/{{type}}.png" class="goal-images">
                        </div>
                    </div>
                    <div class="">
                        Date Created: {{dateCreated}}
                    </div>
                </a>
            </div>
            <br>
        {{/cGoals}}
        {{^cGoals}}
            <div class="">
                You have not completed any goals.
            </div>
        {{/cGoals}}
    </div>
</div>
{{>page-partials/footer}}