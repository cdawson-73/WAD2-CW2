{{>page-partials/header}}
<div class="page-title">
    <h1>Add Goal</h1>
</div>
<div class="page-subtitle">
    <h3>Add A Goal Here</h3>
</div>
<div class="card">
    <div class="card-body">
        {{#error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/error}}
        <form method="post" role="/add-goal">
            <div class="form-group">
                {{user-name-error}}
                <label for="name">
                    Goal Name
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter Goal Name">
                </div>
                <label for="type">
                    Type Option
                </label>
                <div class="col-sm-10">
                    <select class="form-control" name="type" id="type">
                        <option value="fitness">Fitness</option>
                        <option value="health">Healthy-Living</option>
                        <option value="nutrition">Nutrition</option>
                    </select>
                </div>
                <label for="date">
                    Target Date
                </label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="date" name="date" min="{{minDate}}" value="{{minDate}}">
                </div>
                <label for="description">
                    Goal Description
                </label>
                <div class="col-sm-10">
                    <textarea id="description" class="form-control" name="description" rows="4" cols="50"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="btn btn-primary">
                    <a href="/{{username}}/goals" class="button-link">Back To Goals</a>
                </div>
                <input type="submit" value="Add Goal" class="btn btn-primary" readonly autocomplete="off">
            </div>
        </form>
    </div>
  </div>
{{>page-partials/footer}}