{{>page-partials/header}}
<h1>Add New Goal</h1>
<h2>Users Only</h2>
<h3>Welcome {{firstName}}</h3>
<div class="container">
    {{#error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
    {{/error}}
    <form method="post" role="/add-goal">
        <div class="form-group">
            {{user-name-error}}
            <label for="name">
                Goal Name
            </label>
            <div class="col-sm-10">
                <input type="text" id="name" name="name" placeholder="Enter Goal Name">
            </div>
            <label for="type">
                Type Option
            </label>
            <div class="col-sm-10">
                <select name="type" id="type">
                    <option value="fitness">Fitness</option>
                    <option value="health">Healthy-Living</option>
                    <option value="nutrition">Nutrition</option>
                </select>
            </div>
            <label for="date">
                Target Date
            </label>
            <div class="col-sm-10">
                <input type="date" id="date" name="date" min="{{minDate}}" value="{{minDate}}">
            </div>
            <label for="description">
                Goal Description
            </label>
            <div class="col-sm-10">
                <textarea id="description" name="description" rows="4" cols="50"></textarea>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Goal" class="btn btn-primary">
        </div>
        <div class="form-group btn btn-primary">
            <a href="/{{username}}/goals" class="button-link">Back To Goals</a>
        </div>
    </form>
</div>
{{>page-partials/footer}}