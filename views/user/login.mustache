{{>page-partials/header}}
<h1>Login</h1>
<h2>Everyone</h2>
<div>(User's Can't If They're Signed In)</div>
<div class="container">
    <h2>Sign In</h2>
    <form method="post" action="/login">
        <div class="form-group">
            <label for="username">
                Username
            </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username">
            </div>
        </div>
        <div class="form-group">
            <label for="password">
                Password
            </label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password">
            </div>
        </div>
        <input type="submit" value="Sign In" class="btn btn-primary">
    </form>
</div>
<div class="form-group btn btn-primary">
    <a href="/reset-password" class="button-link">Forgot Password</a>
</div>
{{>page-partials/footer}}